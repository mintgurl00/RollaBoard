<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.spring.rollaboard.RoleMapper">

	<resultMap type = "RoleVO" id = "RoleResultMap">
		<result property = "id" column = "ID"/>
		<result property = "board_id" column = "BOARD_ID"/>
		<result property = "name" column = "NAME"/>
		<result property = "description" column = "DESCRIPTION"/>
	</resultMap>
	
	<resultMap type = "RoleAndTaskVO" id = "RoleResultMap2">
		<result property = "taskId" column = "ID"/>
		<result property = "roleId" column = "BOARD_ID"/>
		<result property = "memId" column = "NAME"/>
		<result property = "roleName" column = "DESCRIPTION"/>
		<result property = "memName" column = "DESCRIPTION"/>
	</resultMap>
	
	<!-- getRolesByBoard -->
	<select id="getRolesByBoard" resultMap="BoardResultMap2">
	
	</select>
	
</mapper>